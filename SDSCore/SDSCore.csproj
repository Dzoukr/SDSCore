<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <UseWPF>true</UseWPF>
        <PackageId>SDSCore</PackageId>
        <Description>.NET Core 3.1 port of SDSLite library</Description>
        <RepositoryUrl>https://github.com/Dzoukr/SDSCore</RepositoryUrl>
        <PackageLicenseUrl>https://github.com/Dzoukr/SDSCore/blob/master/LICENSE</PackageLicenseUrl>
        <PackageTags>netcdf;sdslite;csv</PackageTags>
        <Authors>Roman Provazn√≠k</Authors>
        <Version>1.0.0-alpha001</Version>
        <PackageReleaseNotes>Initial port of SDSLite</PackageReleaseNotes>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <DocumentationFile>bin\Debug\ScientificDataSet.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <DocumentationFile>bin\Release\ScientificDataSet.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\NetCDFInterop\NetCDFInterop.csproj" />
    </ItemGroup>

</Project>
